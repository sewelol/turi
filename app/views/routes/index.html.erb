<% content_for :page_title do %>
    <%=t('trip_routes')%>
<% end %>

<% content_for :content_header do %>
    <div class="content-header">
      <div class="row">
        <div class="col-sm-12">
          <div class="header-section">
            <h1><%= yield :page_title %></h1>
          </div>
        </div>
      </div>
    </div>
<% end %>

<% content_for :page_scripts do %>

    <script type='text/javascript' src='http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js?2'></script>


    <script src="<%= asset_path 'app/maps/markers.json' %>"></script>
    <script src="<%= asset_path 'app/maps/control.js' %>"></script>
    <script src="<%= asset_path 'app/maps/leaf-demo-index.js' %>"></script>

    <script src="<%= asset_path 'app/js/app.js' %>"></script>

<% end %>



<% content_for :page_stylesheets do %>
    <link rel="stylesheet" type="text/css" href="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css" />
<% end %>



<div class="col-lg-12">
  <div class="widget">
    <div class="widget-content" >

      <%= link_to raw('<i class="fa fa-plus"></i> ' << t('trip_add_route')), new_trip_route_path(@trip), id: 'add_route_button',class: 'btn btn-primary push-bit' %>

      <div id="map" style="width: 100%; height: 440px; border: 1px solid #AAA;"></div>


    </div>
  </div>
</div>
