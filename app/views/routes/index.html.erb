<% content_for :page_title do %>
    <%=t('trip_routes')%>
<% end %>

<% content_for :content_header do %>
    <div class="content-header">
      <div class="row">
        <div class="col-sm-12">
          <div class="header-section">
            <h1><%= yield :page_title %></h1>
          </div>
        </div>
      </div>
    </div>
<% end %>




<div class="col-lg-12">
  <div class="widget">
    <div class="widget-content" >

      <%= link_to raw('<i class="fa fa-plus"></i> ' << t('trip_add_route')), new_trip_route_path(@trip), id: 'add_route_button',class: 'btn btn-primary push-bit',data: { no_turbolink: true } %>

      <% @routes.each do |route| %>
          <li>

            <strong><%= route.title %> </strong> -
            <%= route.desc %>

          </li>
      <%end%>

    </div>
  </div>
</div>
